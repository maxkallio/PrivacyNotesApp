<Window x:Class="PrivacyNotesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Privacy Notes" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBox x:Name="NoteBox" AcceptsReturn="True" Height="180" TextWrapping="Wrap"/>
        <Button Content="Save Securely" Click="SaveButton_Click" Margin="0,10,0,0"/>
        <TextBlock x:Name="Status" FontStyle="Italic" Foreground="Gray"/>
    </StackPanel>
</Window>